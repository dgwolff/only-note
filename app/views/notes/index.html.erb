<body id="notes-body"> 
  <div id="notes">
    <% unless @notes.blank? %>
      <% @notes.each do |note| %>
        <a href="<%= (url_for [note]) %>">
          <div class="note-wrapper col-md-4 col-sm-6">
            <div class="note">
              <h2 class="title"><%= note.title %></h2>
              <hr>
              <p class="content"><%= note.content.truncate_words(30, omission: '... (continues)') %></p>
              <p class="time-ago"><%= "#{time_ago_in_words(note.created_at)} ago" %></p>
            </div>
          </div>
        </a>
      <% end %>
      <% else %>
        <div class="no-notes">
          <h2>Add a note</h2>
          <p>It appears you haven't created any notes yet... Let's fix that. Create a new note below.</p>
          <%= link_to "New Note", new_note_path, :class => "btn btn-default" %>
        </div>
    <% end %>
  </div>
</body>