<body id="notes-body"> 
  <div id="notes">
    <% unless @notes.blank? %>
      <% @notes.each do |note| %>
        <div class="note-wrapper col-md-4 col-sm-6">
          <div class="note">
            <h2><%= link_to note.title, note %></h2>
            <p><%= "#{time_ago_in_words(note.created_at)} ago" %></p>
          </div>
        </div>
      <% end %>
      <% else %>
        <h2>Add a note</h2>
        <p>It appears you haven't created any notes yet... Let's fix that. Create a new note below.</p>
        <%= link_to "New Note", new_note_path, :class => "btn btn-default" %>
      <% end %>
  </div>
</body>

