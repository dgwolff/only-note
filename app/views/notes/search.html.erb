<body id="notes-body"> 
  <div id="notes">
    <% unless @notes.blank? %>
      <% @notes.each do |note| %>
        <a href="<%= (url_for [note]) %>">
          <div class="note-wrapper col-md-4 col-sm-6">
            <div class="note">
              <h2><%= note.title %></h2>
              <hr>
              <p><%= note.content.truncate_words(30, omission: '... (continues)') %></p>
              <p><%= "#{time_ago_in_words(note.created_at)} ago" %></p>
            </div>
          </div>
        </a>
      <% end %>
    <% end %>
  </div>
</body>